{
  "name": "AvidCaster Chat Overlay",
  "description": "The Official AvidCaster Chat Overlay Extension",
  "manifest_version": 3,
  "version": "1.0.0",
  "homepage_url": "https://github.com/AvidCaster/AvidCasterChatOverlay",
  "icons": {
    "128": "assets/icons/icon-x128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "incognito": "spanning",
  "host_permissions": [
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://studio.youtube.com/*",
    "https://www.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "css": ["content.css"],
      "js": ["jquery.js", "content.js"],
      "matches": [
        "https://youtube.com/live_chat*",
        "https://www.youtube.com/live_chat*",
        "https://studio.youtube.com/live_chat*",
        "https://twitch.tv/live_chat*"
      ]
    }
  ]
}
